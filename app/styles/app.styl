@import 'import'


*
  box-sizing: border-box

$BaronNeue = 'Baron Neue', 'Arial'
$PTSansNarrow = 'PT Sans Narrow'

$c-main-blue = #1976D2
$c-main-green = #388E3C
$c-main-orange = #E64A19
$c-main-white = #F7F7F7
$c-main-black = #212121
$c-main-grey = #545454
$c-secondary-black = #212325
$c-secondary-white = #EEEEEE

circle(dia)
  width: dia
  height: dia
  border-radius: 100%

button($size, $color1, $color2)
  hbox: center
  circle: $size
  border: 1px solid $color1
  color: $color1

  &:hover
    background: $color1
    color: $color2

  &:active
    background: darken($color1, 20%)
    color: $color2

