a
  display: block
  color: inherit
  text-decoration: inherit
  cursor: inherit
  &:active, &:focus
    outline: none;

.emblem
  font-family: $BaronNeue
  font-weight: normal
  line-height: 1em

  .first
    color: $c-main-green

  .second
    color: $c-main-orange

@import 'header'
@import 'main'

