@import 'reset'
@import 'fonts/ptsans'
@import 'fonts/roboto'
@import 'fonts/baronneue'
@import 'fonts/mdi'
@import 'icons/mdi'

$mdi
  @import 'icons/mdi.styl'

*
  box-sizing: border-box

a
  display: block
  color: inherit
  text-decoration: inherit
  cursor: inherit
  &:active, &:focus
    outline: none;


column()
  display: flex
  flex-direction: column
  align-items: stretch
  justify-content: stretch

row()
  display: flex
  flex-direction: row
  // align-items: center
  // justify-content: space-between

content-center()
  display: flex
  // flex-direction: row
  justify-content: center
  align-items: center

// header

header
  background: #E64A19

// main-navbar
.main-navbar
  padding-left: 10px
  padding-right: 10px
  row()
  flex-grow: 1

// logo
.logo
  background: white
  width: 120px
  height: 80px
  text-align: center
  border-radius: 0px 0px 4px 4px;
  font-family: 'PT Sans Narrow'
  font-weight: bold
  font-size: 18px;
  color: #212121;
  line-height: 1em;

  .emblem
    padding-top: 6px
    font-family: 'Baron Neue'
    font-weight: 900
    font-size: 60px
    line-height: 1em

    .first
      color: #43A047
    .second
      color: #FF5722
  p
    margin-top: -8px
    color: #212121

nav
  row()
  // max-width: 620px
  flex-basis: 620px
  margin-left: 5px
  margin-right: 5px
  font-family: 'PT Sans Narrow'
  font-size: 24px
  line-height: 1em
  text-transform: uppercase
  color: #FFCCBC

  .active
    font-weight: bold
    color: white

  a
    margin-left: 5px
    margin-right: 5px


    &:hover
      color: white

.icon
  width: 36px
  height: 36px
  padding-left: 5px
  padding-right: 5px
  content-center()

  box-shadow: 1px 2px 4px 0px rgba(0,0,0,0.30)
  border-radius: 100%

  color: white

.action-buttons
  row()
  // max-width: 150px
  flex: 1 1 150px

action-button(bg)
  background: bg

  &:active
    background: darken(bg, 15%)

.contacts
  action-button: #43A047
  mdi-communication-phone()

  &:hover
    mdi-notification-phone-in-talk()

.cart
  action-button: #FF5722
  mdi-action-shopping-cart()

  &:hover
    mdi-action-add-shopping-cart()

.profile
  action-button: #2196F3
  mdi-social-person()

  &:hover
    mdi-social-person-outline()
