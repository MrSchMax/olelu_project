size-pref(args...)
  if length(args) == 1
    if length(args[0]) > 1
      w = args[0][0]
      h = args[0][1]
    else
      w = args
      h = args
  if length(args) > 1
    w = args[0]
    h = args[1]

  pref-width: w
  pref-height: h

