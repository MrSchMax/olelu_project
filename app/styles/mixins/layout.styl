width-pref(val)
  if val isnt null and val isnt nil
    width: val

pref-width(val)
  if val isnt null and val isnt nil
    width: val

width-min(val)
  if val isnt null and val isnt nil
    min-width: val

width-max(val)
  if val isnt null and val isnt nil
    max-width: val

width-fix(val)
  if val isnt null and val isnt nil
    width: val
    min-width: val
    max-width: val

width-full(pref = null, min = null, max =null)
  width-pref: pref
  width-min: min
  width-max: max

width-minmax(min = null, max = null)
  width-min: min
  width-max: max

width(args...,pref = null, min = null, max = null)

  if pref isnt null or min isnt null or max isnt null
    width-full: pref min max

  if length(args) > 2
    width-full: args[0], args[1], args[2]

  else if length(args) == 1
    width-pref: args[0]

  else if length(args) == 2
    if args[1] == fix
      width-fix: args[0]
    else
      width-minmax: args[0], args[1]


