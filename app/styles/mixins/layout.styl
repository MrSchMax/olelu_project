  size-pref(pref)
  size-min(min)
  size-max(max)


size(args..., pref = null, min = null, max = null)
  args: args
  size: length(args)
  separ: list-separator(args)
  pref: pref
  min: min
  max: max
  if pref isnt null or min isnt null or max isnt null
    size-full: pref min max
  else if list-separator(args) == ' '
    if fix in args
      if args[0] != fix && args[1] != fix
        size-fix(args[0], args[1])
  // if length(args) == 1



