pref-height(val = null)
  if val != null && val != nil
    height: val
height-pref(val = null)
  pref-height(val)

min-height(val = null)
  if val != null && val != nil
    min-height: val
height-min(val = null)
  min-height(val)

max-height(val = null)
  if val != null && val != nil
    max-height: val
height-max(val = null)
  max-height(val)

fix-height(val = null)
  if val != null && val != nil
    height: val
    min-height: val
    max-height: val
height-fix(val = null)
  fix-height(val)

minmax-height(min, max)
  if min != null && min != nil
    min-height: min
  if max != null && max != nil
    max-height: max
height-minmax(min, max)
  minmax-height(min, max)

all-height(pref, min, max)
  pref-height(pref)
  min-height(min)
  max-height(max)
height-all(pref, min, max)
  all-height(pref, min, max)


