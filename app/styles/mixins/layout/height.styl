height(args..., pref = null, min = null, max = null)
  if pref == null || min == null || max == null
    if length(args) == 1
      if length(args[0]) == 1
        pref = args[0]
      else
        if length(args[0]) == 2
          min = args[0][0]
          max = args[0][1]
        else
          pref = args[0][0]
          min  = args[0][1]
          max  = args[0][2]
    else if length(args) == 2
      min = args[0]
      max = args[1]
    else
      pref = args[0]
      min = args[1]
      max = args[2]
  all-height(pref, min, max)
